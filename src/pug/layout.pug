    block meta
      title GREECE.RU ΑΝΑΠΤΥΞΙΑΚΗ ΑΚΙΝΗΤΩΝ ΑΕ

    block head
      link(rel='stylesheet', href='css/owl.carousel.min.css')
      link(rel='stylesheet', href='css/style.css')
      //- script
      //-   include ../js/head-script.js

  body
    noscript Enable JavaScript please.

    .page__inner
      .page__content

        +page-header()
          +logo()
            img(src='img/logo.png', alt='Greece.ru', width='166', height='36')

        block content
          p content

      .page__footer-wrapper
        +page-footer()
          .page-footer__left
            section.page-footer__block.page-footer__block--about
              h3.page-footer__block-title Σχετικά με την ιστοσελίδα
